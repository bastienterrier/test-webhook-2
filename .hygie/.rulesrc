options:
  executeAllRules: true
  enableRules: true
  enableGroups: false
  allRuleResultInOne: false
  
rules:
  - name: issueTitle
    options:
      regexp: '.*'
    onSuccess:
      - callback: CommentIssueRunnable
        args:
          comment: 'ping @bastienterrier'
  - name: issueComment
    options:
      regexp: '^ping @bastienterrier$'
    onSuccess:
      - callback: LoggerRunnable
        args:
          type: warn
          message: 'Someone ping you!'          
